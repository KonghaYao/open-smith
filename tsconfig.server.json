{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "verbatimModuleSyntax": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": ["node"],
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "outDir": "./dist",
        "declaration": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}
